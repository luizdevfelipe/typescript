{
    "compilerOptions": {
        "target": "ES2019",
        "module": "Commonjs",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "noEmitOnError": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "./src"
    ]
}